<%= notice %>

<!--タイトル-->
<h1>Books</h1>

<!--投稿一覧-->
<table class="table">
  <!--表のヘッダ部分-->
  <thead>
    <tr>
      <th class=th-title>Title</th>
      <th class=th-body>Body</th>
    </tr>
  </thead>
  <!--表のボディ部分-->
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show",book_path(book.id)%></td>
      <td><%= link_to "Edit",book_edit_path(book.id)%></td>
      <td><%= link_to "destroy",book_destroy_path(book.id),method: :delete,"data-confirm" => "Are you sure?"%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<!--新規投稿-->
<%= form_with model: Book.new,url: '/books',method: :post,local:true do |f| %>
<h2>New book</h2>
  <!--新規投稿する本のタイトル-->
  <div class=field>
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>
  <!--新規投稿する本の感想-->
  <div class=field>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <!--投稿ボタン（CreateBook）-->
  <%= f.submit "Create Book" %>
  <% end %>
